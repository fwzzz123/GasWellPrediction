            <result property="lmf" column="LMF" jdbcType="VARCHAR"/>
            <result property="apd" column="APD" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        Las_Info_ID,Well_ID,STRT,
        STOP,STEP,Absent_Value,
        COMP,WELL,FLD,
        LOC,CTRY,PROV,
        SRVC,DATE,UWI,
        CNTY,STAT,API,
        LIC,LATI,Well_LONG,
        GDAT,RUN,PDAT,
        EPD,LMF,APD
    </sql>
    <insert id="insertWell" parameterType="com.proj.entity.po.WellInfoPO">


    </insert>

    <select id="getAllWellNames" resultType="java.lang.String">
        SELECT DISTINCT WELL FROM Well_Las_Info;
    </select>

    <update id="updateWellIdInLasInfo" >
        UPDATE Well_Las_Info wli
        SET Well_ID = (
            SELECT w.id
            FROM Well w
            WHERE w.well_name = wli.WELL
        )
        WHERE EXISTS (
            SELECT 1
            FROM Well w
            WHERE w.well_name = wli.WELL
        )
    </update>



</mapper>
