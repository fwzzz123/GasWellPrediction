            <result property="absentValue" column="Absent_Value" jdbcType="VARCHAR"/>
            <result property="comp" column="COMP" jdbcType="VARCHAR"/>
            <result property="well" column="WELL" jdbcType="VARCHAR"/>
            <result property="fld" column="FLD" jdbcType="VARCHAR"/>
            <result property="loc" column="LOC" jdbcType="VARCHAR"/>
            <result property="ctry" column="CTRY" jdbcType="VARCHAR"/>
            <result property="prov" column="PROV" jdbcType="VARCHAR"/>
            <result property="srvc" column="SRVC" jdbcType="VARCHAR"/>
